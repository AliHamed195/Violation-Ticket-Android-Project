<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Dashboard">


    <androidx.cardview.widget.CardView
        android:id="@+id/card_view2"
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_height="230dp"
        android:layout_marginTop="10dp"
        app:cardCornerRadius="4dp">

        <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/card_view_style"
            android:paddingLeft="16dp"
            android:paddingRight="16dp" >
            <ImageView
                android:id="@+id/name1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/logo"/>
            <TextView
                android:id="@+id/times1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="كتابة ظبط"
                android:layout_centerHorizontal="true"
                android:textAlignment="center"
                android:layout_below="@id/name1"
                android:textSize="34sp"
                android:textStyle="bold" />
            <Button
                android:id="@+id/createViolationSectionBtn"
                android:layout_width="96dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/times1"
                android:layout_marginTop="7dp"
                android:layout_centerHorizontal="true"
                android:text="كتابة" />
        </RelativeLayout>
    </androidx.cardview.widget.CardView>


    <androidx.cardview.widget.CardView
        android:id="@+id/card_view3"
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_height="230dp"
        android:layout_marginTop="10dp"
        app:cardCornerRadius="4dp">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/card_view_style"
        android:paddingLeft="16dp"
        android:paddingRight="16dp" >
        <ImageView
            android:id="@+id/name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/logo"/>
        <TextView
            android:id="@+id/times"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="مشاهدة كل المخالفات"
            android:layout_centerHorizontal="true"
            android:textAlignment="center"
            android:layout_below="@id/name"
            android:textSize="34sp"
            android:textStyle="bold" />
        <Button
            android:id="@+id/seeAllViolationsSectionBtn"
            android:layout_width="96dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/times"
            android:layout_marginTop="7dp"
            android:layout_centerHorizontal="true"
            android:text="مشاهدة" />
    </RelativeLayout>
</androidx.cardview.widget.CardView>

</LinearLayout>